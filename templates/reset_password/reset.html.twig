{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}


    <section class="dark:bg-gray-900">
        <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
            
            <div class="w-full p-6 bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md dark:bg-gray-800 dark:border-gray-700 sm:p-8">
                <h2 class="mb-1 text-xl font-bold leading-tight text-center tracking-tight text-primary md:text-2xl dark:text-white">
                    Changer le mot de passe
                </h2>
                {{ form_start(resetForm) }}
                {{ form_row(resetForm.plainPassword) }}
                <button type="submit" class="w-full text-white bg-[#5368d5] hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                    Changer le mot de passe
                </button>
            {{ form_end(resetForm) }}
        
            </div>
        </div>
      </section>
{% endblock %}
