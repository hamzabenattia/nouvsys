{% extends 'base.html.twig' %}

{% block title %}Nos Offres{% endblock %}



{% block body %}

<div class="mt-20 mx-8">

<nav class="flex mb-4" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-3 rtl:space-x-reverse">
        <li class="inline-flex items-center">
            <a href="{{path('app_home')}}" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-[#18629C] dark:text-gray-400 dark:hover:text-white">
                <svg class="w-3 h-3 me-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewbox="0 0 20 20">
                    <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
                </svg>
                Accueil
            </a>
        </li>
        <li>
            <div class="flex items-center">
                <svg class="w-3 h-3 text-gray-400 mx-1 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 6 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                </svg>
                <a href="{{path('app_offres')}}" class="ms-1 text-sm font-medium text-gray-700 hover:text-[#18629C] md:ms-2 dark:text-gray-400 dark:hover:text-white">Nos Offres ?</a>
            </div>
        </li>

    </ol>
</nav>

<p>
  Nombre total d'offres : {{ offers.getTotalItemCount }}

</p>


<div class="container mx-auto py-8">
  <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for offre in offers %}
    <a href="{{path('app_offres_show', {'id': offre.id})}}">
    <li class="bg-white hover:bg-gray-100 rounded-lg shadow-md p-6 ani_fadeInUp  aniUtil_active">
      <h2 class="text-xl font-semibold mb-4 ">{{offre.title}}</h2>
      <div class="flex flex-col gap-2">
      <div class="flex justify-start items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 32 32"><path fill="currentColor" d="M16 18a5 5 0 1 1 5-5a5.006 5.006 0 0 1-5 5m0-8a3 3 0 1 0 3 3a3.003 3.003 0 0 0-3-3"/><path fill="currentColor" d="m16 30l-8.436-9.949a35 35 0 0 1-.348-.451A10.9 10.9 0 0 1 5 13a11 11 0 0 1 22 0a10.9 10.9 0 0 1-2.215 6.597l-.001.003s-.3.394-.345.447ZM8.813 18.395s.233.308.286.374L16 26.908l6.91-8.15c.044-.055.278-.365.279-.366A8.9 8.9 0 0 0 25 13a9 9 0 1 0-18 0a8.9 8.9 0 0 0 1.813 5.395"/></svg>        
        <p class="text-gray-900 dark:text-gray-200 ml-2">{{offre.location}}</p>
      </div>

      <div class="flex justify-start items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"><circle cx="17" cy="7" r="3"/><circle cx="7" cy="17" r="3"/><path d="M14 14h6v5a1 1 0 0 1-1 1h-4a1 1 0 0 1-1-1zM4 4h6v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1z"/></g></svg>   
        <p class="text-gray-900 dark:text-gray-200 ml-2">{{offre.category}}</p>
      </div>

      <div class="flex justify-start items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 2048 2048"><path fill="currentColor" d="M2048 384v1280H0V384h640V256q0-27 10-50t27-40t41-28t50-10h512q27 0 50 10t40 27t28 41t10 50v128zm-1280 0h512V256H768zM128 512v185l640 319V896h512v120l640-319V512zm768 512v128h256v-128zm1024 512V839l-640 321v120H768v-120L128 839v697z"/></svg>
              <p class="text-gray-900 dark:text-gray-200 ml-2">{{offre.type}}</p>
      </div>

<div class="flex justify-end">
  <span class="bg-blue-100 text-blue-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded-full dark:bg-blue-900 dark:text-blue-300">{{offre.createdAt | date('d-m-Y')}}</span>

</div>

    </div>  
  </li>
</a>
    {% endfor %}
    
     

   
  </ul>
</div>
    
<div class="my-5 flex justify-center items-center">
  {{ knp_pagination_render(offers) }}
</div>
      </div>
     
{% endblock %}
