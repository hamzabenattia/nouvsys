{% extends 'base.html.twig' %}

{% block title %}Offres
{% endblock %}

{% block body %}
	<div class="m-20  mx-8">

		<nav class="hidden md:flex mb-12" aria-label="Breadcrumb">
			<ol class="inline-flex items-center space-x-1 md:space-x-3 rtl:space-x-reverse">
				<li class="inline-flex items-center">
					<a href="{{path('app_home')}}" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-[#18629C] dark:text-gray-400 dark:hover:text-white">
						<svg class="w-3 h-3 me-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewbox="0 0 20 20">
							<path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
						</svg>
						Accueil
					</a>
				</li>
				<li>
					<div class="flex items-center">
						<svg class="w-3 h-3 text-gray-400 mx-1 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 6 10">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
						</svg>
						<a href="{{path('app_offres')}}" class="ms-1 text-sm font-medium text-gray-700 hover:text-[#18629C] md:ms-2 dark:text-gray-400 dark:hover:text-white">Nos Offres ?</a>
					</div>
				</li>

				<li>
					<div class="flex items-center">
						<svg class="w-3 h-3 text-gray-400 mx-1 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 6 10">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
						</svg>
						<a href="{{path('app_offres_show', {'id': offre.id})}}" class="ms-1 text-sm font-medium text-gray-700 hover:text-[#18629C] md:ms-2 dark:text-gray-400 dark:hover:text-white">{{offre.title}}</a>
					</div>
				</li>

			</ol>
		</nav>

<div class="flex justify-center items-center">
		<div class="flex justify-start items-start flex-col">
			<div class="flex gap-2 flex-col md:flex-row">
				<div class="flex justify-start items-center">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" viewbox="0 0 32 32"><path fill="currentColor" d="M16 18a5 5 0 1 1 5-5a5.006 5.006 0 0 1-5 5m0-8a3 3 0 1 0 3 3a3.003 3.003 0 0 0-3-3"/><path fill="currentColor" d="m16 30l-8.436-9.949a35 35 0 0 1-.348-.451A10.9 10.9 0 0 1 5 13a11 11 0 0 1 22 0a10.9 10.9 0 0 1-2.215 6.597l-.001.003s-.3.394-.345.447ZM8.813 18.395s.233.308.286.374L16 26.908l6.91-8.15c.044-.055.278-.365.279-.366A8.9 8.9 0 0 0 25 13a9 9 0 1 0-18 0a8.9 8.9 0 0 0 1.813 5.395"/></svg>
					<p class="text-gray-600 text-xl dark:text-gray-200 ml-2">{{offre.location}}</p>
				</div>

				<div class="flex justify-start items-center">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" viewbox="0 0 24 24">
						<g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"><circle cx="17" cy="7" r="3"/><circle cx="7" cy="17" r="3"/><path d="M14 14h6v5a1 1 0 0 1-1 1h-4a1 1 0 0 1-1-1zM4 4h6v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1z"/></g>
					</svg>
                    <p class="text-gray-600 text-xl dark:text-gray-200 ml-2">{{offre.category}}</p>

				</div>

                <div class="flex justify-start items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" viewBox="0 0 2048 2048"><path fill="currentColor" d="M2048 384v1280H0V384h640V256q0-27 10-50t27-40t41-28t50-10h512q27 0 50 10t40 27t28 41t10 50v128zm-1280 0h512V256H768zM128 512v185l640 319V896h512v120l640-319V512zm768 512v128h256v-128zm1024 512V839l-640 321v120H768v-120L128 839v697z"/></svg>
                    <p class="text-gray-600 text-xl dark:text-gray-200 ml-2">{{offre.type}}</p>

				</div>
			</div>

			<div class="flex flex-col md:flex-row justify-center items-center gap-4">
				<h1 class="text-3xl font-semibold text-gray-800 dark:text-gray-100 mt-2">{{offre.title}}</h1>
				<button class="bg-primary font-semibold text-white py-2 px-4 rounded-2xl hover:bg-[#132634] dark:bg-[#18629C] dark:text-white">Je suis intéressé</button>


			</div>

            <div class="mt-3 flex flex-col text-xl max-w-2xl [&>div>strong]:text-primary">
                <h1 class="font-medium my-3">Description du poste:</h1>

                {{offre.description | raw}}

				<button class="bg-primary items-center font-semibold text-white py-2 px-4 rounded-2xl hover:bg-[#132634] dark:bg-[#18629C] dark:text-white">Je suis intéressé</button>

            </div>	

        </div>
		
</div>

    </div>

		{% endblock %}